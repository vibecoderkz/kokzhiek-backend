{
  "name": "kokzhiek-editor-backend",
  "version": "1.0.0",
  "description": "Backend API for Kokzhiek Editor - Microservice for authentication and content management",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --require dotenv/config src/app.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "node dist/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "drizzle-kit drop && drizzle-kit migrate",
    "db:seed": "ts-node src/scripts/seed.ts",
    "create-super-admin": "ts-node --require dotenv/config src/scripts/create-super-admin.ts",
    "clean-db": "ts-node --require dotenv/config scripts/clean-database.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.20.0",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "kokzhiek",
    "editor",
    "backend",
    "microservice",
    "authentication",
    "content-management"
  ],
  "author": "Kokzhiek Team",
  "license": "MIT"
}
